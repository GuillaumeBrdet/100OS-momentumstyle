{
  "manifest_version": 3,
  "name": "100 School OS - New Tab",
  "version": "3.0",
  "description": "Beautiful new tab page for 100 School with time, tasks, and quick links - inspired by Momentum.",
  
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "100 School OS"
  },
  
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  
  "permissions": ["storage"],
  "host_permissions": [
    "https://vdeuzepsaqplhixnhfok.supabase.co/*",
    "https://cdn.jsdelivr.net/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; connect-src https://vdeuzepsaqplhixnhfok.supabase.co https://cdn.jsdelivr.net;"
  },
  
  "homepage_url": "https://www.100school.com/privacy-policy"
}
